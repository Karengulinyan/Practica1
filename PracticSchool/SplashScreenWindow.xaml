<Window x:Class="PracticSchool.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticSchool"
        mc:Ignorable="d"
       Title="SplashScreenWindow" Height="300" Width="400"
        WindowStyle="None" ResizeMode="NoResize" Background="White"
        ShowInTaskbar="False" WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="school12.png" Height="100" Width="100" Margin="5,0,5,0"/>
            <TextBlock x:Name="StatusTextBlock" Text="Загрузка..." FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            <ProgressBar x:Name="ProgressBar" Width="200" Height="20" IsIndeterminate="True"/>
        </StackPanel>
    </Grid>
</Window>
